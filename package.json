{
  "name": "cotland",
  "version": "1.0.0",
  "description": "Cotland betting platform",
  "scripts": {
    "start": "cd auth-backend && node src/index.js",
    "server": "cd auth-backend && nodemon src/index.js",
    "client": "npm --prefix frontend run dev",
    "build": "cd frontend && npm run build",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd frontend && npm install && cd ../auth-backend && npm install"
  },
  "dependencies": {
    "concurrently": "^8.0.1"
  }
} 
